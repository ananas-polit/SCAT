<Window x:Class="SCAT.Forms.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SCAT.Forms"
        mc:Ignorable="d"
        Title="MenuWindow" Height="450" Width="800">
    <Grid>
        <UniformGrid Columns="1" Margin="-10,0,9.6,0" >
            <Button x:Name="BtnStatement" Click="BtnStatement_Click"
                    Style="{StaticResource MenuButton}"
                    Content ="Statement" Margin="47,20,497.4,12" Width="Auto" Height="Auto"/>
            <Button x:Name="BtnSubscriber" Click="BtnSubscriber_Click"
                    Style="{StaticResource MenuButton}"
                    Content ="Subscriber" Margin="150,20,396.4,14" Width="Auto"/>
            <Image Source="/SCAT;component/Resource/scat.png" Margin="10,-9,10.4,-15"/>
            <Button x:Name="BtnCall" Click="BtnCall_Click"
                    Style="{StaticResource MenuButton}"
                    Content ="Call" Margin="395,20,150.4,14" Width="Auto"/>
            <Button x:Name="BtnAddress" Click="BtnAddress_Click"
                    Style="{StaticResource MenuButton}"
                    Content ="Address" Margin="497,20,48.4,14" Width="Auto"/>
        </UniformGrid>
    </Grid>
</Window>
