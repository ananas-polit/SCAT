<Window x:Class="SCAT.Forms.MainPageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SCAT.Forms"
        mc:Ignorable="d"
        Title="MainPageWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="70"></RowDefinition>
        </Grid.RowDefinitions>

       
        <StackPanel x:Name="Aktsi"  Orientation="Horizontal" Background="{StaticResource ColorMain}" Margin="0,350,-0.4,0.4" Grid.RowSpan="2">

            <ComboBox x:Name="CmbGender" SelectionChanged="CmbGender_Selected" Width="421" Margin="10,10,0,10.4">
                <TextBlock>Тарифы</TextBlock>
                <TextBlock>Акции</TextBlock>
            </ComboBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,0,-0.4,70.4">

            <Button Click="Button_Click_1"  Content="&lt;" Width="20" Margin="0,10,0,0"/>
            <Image x:Name="image1" Width="743" Source="{Binding ImageName}" Margin="0,10,0,0" />
            <Button Content="&gt;" Width="21" Click="Button_Click" Margin="0,10,0,0"/>


        </StackPanel>
    </Grid>
</Window>
